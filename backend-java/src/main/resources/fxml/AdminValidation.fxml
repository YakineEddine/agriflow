<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.AdminValidationController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #F5F5F5;">
    
    <!-- Header -->
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="← Retour" styleClass="btn-secondary" onAction="#handleBack"/>
                <Text text="AGRIFLOW - ADMIN" styleClass="header-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="Validation des demandes" style="-fx-font-size: 18px; -fx-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 40;">
            
            <Text text="Admin Validation - Collaborations" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
            
            <!-- Onglets de navigation -->
            <HBox spacing="15" style="-fx-padding: 10 0;">
                <Button text="Utilisateurs" styleClass="btn-secondary" style="-fx-font-size: 14px;"/>
                <Button text="Parcelles" styleClass="btn-secondary" style="-fx-font-size: 14px;"/>
                <Button text="Irrigation" styleClass="btn-secondary" style="-fx-font-size: 14px;"/>
                <Button text="Maraîchage" styleClass="btn-secondary" style="-fx-font-size: 14px;"/>
                <Button text="✓ Collaborations" styleClass="btn-primary" style="-fx-font-size: 14px;"/>
            </HBox>
            
            <!-- Section Nouveautés -->
            <VBox styleClass="card" spacing="15">
                <Text text="Nouveautés" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <ComboBox fx:id="filterCombo" prefWidth="250" style="-fx-font-size: 14px;"/>
                    <Button text="Contenus créés" styleClass="btn-secondary"/>
                </HBox>
            </VBox>
            
            <!-- Tableau des demandes -->
            <VBox styleClass="card" spacing="15">
                
                <!-- En-têtes du tableau -->
                <HBox spacing="20" style="-fx-padding: 15; -fx-background-color: #F5F5F5; -fx-background-radius: 8;">
                    <Text text="Titre" style="-fx-font-weight: bold; -fx-font-size: 14px;" HBox.hgrow="ALWAYS"/>
                    <Text text="Statut" style="-fx-font-weight: bold; -fx-font-size: 14px;" prefWidth="120"/>
                    <Text text="Date" style="-fx-font-weight: bold; -fx-font-size: 14px;" prefWidth="120"/>
                    <Text text="Actions" style="-fx-font-weight: bold; -fx-font-size: 14px;" prefWidth="200"/>
                </HBox>
                
                <!-- Ligne 1 -->
                <HBox spacing="20" alignment="CENTER_LEFT" 
                      style="-fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Text text="Récolte de Tomates" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Text text="Ali Ben Ahmed" style="-fx-fill: #757575; -fx-font-size: 12px;"/>
                    </VBox>
                    <Label text="PENDING" styleClass="badge badge-pending" prefWidth="120"/>
                    <Text text="22/12/2025" prefWidth="120" style="-fx-font-size: 14px;"/>
                    <HBox spacing="10" prefWidth="200">
                        <Button text="Valider" styleClass="btn-primary" onAction="#handleValidate" prefWidth="90"/>
                        <Button text="Rejeter" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8;" 
                                onAction="#handleReject" prefWidth="90"/>
                    </HBox>
                </HBox>
                
                <!-- Ligne 2 - Vide pour auctions -->
                <HBox spacing="20" alignment="CENTER_LEFT" 
                      style="-fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
                    <Text text="Auctions" style="-fx-fill: #BDBDBD; -fx-font-style: italic;" HBox.hgrow="ALWAYS"/>
                    <Text text="-" prefWidth="120" style="-fx-fill: #BDBDBD;"/>
                    <Text text="-" prefWidth="120" style="-fx-fill: #BDBDBD;"/>
                    <Text text="-" prefWidth="200" style="-fx-fill: #BDBDBD;"/>
                </HBox>
                
                <!-- Ligne 3 -->
                <HBox spacing="20" alignment="CENTER_LEFT" 
                      style="-fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Text text="Récolte de Tomates" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Text text="Ahmed Omar" style="-fx-fill: #757575; -fx-font-size: 12px;"/>
                    </VBox>
                    <Label text="PENDING" styleClass="badge badge-pending" prefWidth="120"/>
                    <Text text="21/12/2025" prefWidth="120" style="-fx-font-size: 14px;"/>
                    <HBox spacing="10" prefWidth="200">
                        <Button text="Valider" styleClass="btn-primary" onAction="#handleValidate" prefWidth="90"/>
                        <Button text="Rejeter" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8;" 
                                onAction="#handleReject" prefWidth="90"/>
                    </HBox>
                </HBox>
                
                <!-- Ligne 4 - Vide pour demandes -->
                <HBox spacing="20" alignment="CENTER_LEFT" 
                      style="-fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
                    <Text text="Demandes" style="-fx-fill: #BDBDBD; -fx-font-style: italic;" HBox.hgrow="ALWAYS"/>
                    <Text text="-" prefWidth="120" style="-fx-fill: #BDBDBD;"/>
                    <Text text="-" prefWidth="120" style="-fx-fill: #BDBDBD;"/>
                    <Text text="-" prefWidth="200" style="-fx-fill: #BDBDBD;"/>
                </HBox>
                
                <!-- Ligne 5 -->
                <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 15;">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Text text="Récolte de Tomates" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Text text="Mohamed Saidi" style="-fx-fill: #757575; -fx-font-size: 12px;"/>
                    </VBox>
                    <Label text="PENDING" styleClass="badge badge-pending" prefWidth="120"/>
                    <Text text="31/01/2025" prefWidth="120" style="-fx-font-size: 14px;"/>
                    <HBox spacing="10" prefWidth="200">
                        <Button text="Voir détail" styleClass="btn-secondary" onAction="#handleViewDetails" prefWidth="190"/>
                    </HBox>
                </HBox>
                
            </VBox>
            
        </VBox>
    </center>
</BorderPane>
