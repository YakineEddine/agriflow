<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.MyRequestsController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #F5F5F5;">
    
    <!-- Header -->
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="← Retour" styleClass="btn-secondary" onAction="#handleBack"/>
                <Text text="AGRIFLOW" styleClass="header-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="Mes Demandes" style="-fx-font-size: 18px; -fx-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 40;">
            
            <VBox spacing="5">
                <Text text="Mes Demandes" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Text text="(Demandes de collaboration publiées)" style="-fx-fill: #757575; -fx-font-size: 14px;"/>
            </VBox>
            
            <!-- Card avec TableView des demandes -->
            <VBox styleClass="card" spacing="20" VBox.vgrow="ALWAYS">
                
                <!-- TableView -->
                <TableView fx:id="requestsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Titre" prefWidth="250">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="title"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Date début" prefWidth="120">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="startDate"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Date fin" prefWidth="120">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="endDate"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Statut" prefWidth="150">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="status"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Personnes" prefWidth="100">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="neededPeople"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <placeholder>
                        <Text text="Aucune demande trouvée" style="-fx-fill: #757575;"/>
                    </placeholder>
                </TableView>
                
            </VBox>
            
            <!-- Boutons d'action -->
            <HBox spacing="15">
                <Button text="Voir détails" styleClass="btn-primary" onAction="#handleViewDetails"/>
                <Button text="Supprimer" styleClass="btn-secondary" onAction="#handleDelete" 
                        style="-fx-background-color: #D32F2F; -fx-text-fill: white;"/>
            </HBox>
            
        </VBox>
    </center>
</BorderPane>
