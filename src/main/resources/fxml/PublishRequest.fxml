<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.PublishRequestController"
            prefHeight="900.0" prefWidth="1000.0"
            style="-fx-background-color: #F5F5F5;">

    <!-- Header -->
    <top>
        <VBox styleClass="header" style="-fx-background-color: #2E7D32;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30;">
                <Button text="← Retour" styleClass="btn-secondary" onAction="#handleCancel"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 5;"/>
                <Text text="AGRIFLOW" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="Publier une demande" style="-fx-font-size: 18px; -fx-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox spacing="30" style="-fx-padding: 40;">

                <!-- Card du formulaire -->
                <VBox styleClass="card" spacing="25" maxWidth="700" alignment="TOP_CENTER"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                    <!-- Titre du formulaire -->
                    <VBox spacing="5" alignment="CENTER">
                        <Text text="Publier une demande" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                        <Text text="(Nouvelle demande de collaboration)" style="-fx-font-size: 14px; -fx-fill: #757575;"/>
                    </VBox>

                    <Separator/>

                    <!-- Champ Titre -->
                    <VBox spacing="8">
                        <Label text="Titre de la demande *"
                               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        <TextField fx:id="titleField" promptText="Ex: Récolte de tomates"
                                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                    </VBox>

                    <!-- Champ Lieu -->
                    <VBox spacing="8">
                        <Label text="Lieu *"
                               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        <TextField fx:id="locationField" promptText="Ex: Bizerte"
                                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                    </VBox>

                    <!-- Dates (2 colonnes) -->
                    <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Date de début *"
                                   style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;"/>
                            <DatePicker fx:id="startDatePicker" promptText="Sélectionner la date..."
                                        prefWidth="300" style="-fx-font-size: 14px;"/>
                        </VBox>

                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Date de fin *"
                                   style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;"/>
                            <DatePicker fx:id="endDatePicker" promptText="Sélectionner la date..."
                                        prefWidth="300" style="-fx-font-size: 14px;"/>
                        </VBox>
                    </HBox>

                    <!-- Nombre de personnes -->
                    <VBox spacing="8">
                        <Label text="Nombre de personnes recherchées *"
                               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        <ComboBox fx:id="neededPeopleCombo" promptText="Sélectionner le nombre..."
                                  prefWidth="200" style="-fx-font-size: 14px;"/>
                    </VBox>

                    <!-- Salaire -->
                    <VBox spacing="8">
                        <Label text="Salaire proposé (DT/jour) *"
                               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        <TextField fx:id="salaryField" promptText="Ex: 40"
                                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                    </VBox>

                    <!-- Description -->
                    <VBox spacing="8">
                        <Label text="Description *"
                               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        <TextArea fx:id="descriptionArea"
                                  promptText="Décrivez votre besoin en détail..."
                                  wrapText="true" prefHeight="150"
                                  style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                    </VBox>

                    <Separator/>

                    <!-- Note d'information -->
                    <HBox spacing="10" alignment="CENTER_LEFT"
                          style="-fx-background-color: #FFF3E0; -fx-padding: 15; -fx-background-radius: 8;">
                        <Text text="ℹ️" style="-fx-font-size: 20px;"/>
                        <Text text="Votre demande sera soumise à validation par un administrateur avant d'être publiée publiquement."
                              wrappingWidth="580" style="-fx-fill: #E65100; -fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Boutons -->
                    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                        <Button text="Annuler" styleClass="btn-secondary" onAction="#handleCancel"
                                prefWidth="150" prefHeight="45"
                                style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8; -fx-cursor: hand;"/>

                        <Button text="Publier la demande" styleClass="btn-primary" onAction="#handlePublish"
                                prefWidth="200" prefHeight="45"
                                style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                    </HBox>

                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
