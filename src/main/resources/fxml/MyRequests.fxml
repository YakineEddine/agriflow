<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.MyRequestsController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #F5F5F5;">

    <!-- Header -->
    <top>
        <VBox styleClass="header" style="-fx-background-color: #2E7D32;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30;">
                <Button text="← Retour" styleClass="btn-secondary" onAction="#handleBack"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 8 20;"/>
                <Text text="AGRIFLOW" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="Mes Demandes" style="-fx-font-size: 18px; -fx-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 40;">

            <!-- Titre -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Text text="Mes Demandes" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Text text="(Demandes de collaboration publiées)" style="-fx-font-size: 14px; -fx-fill: #757575;"/>
            </HBox>

            <!-- Tableau des demandes -->
            <VBox styleClass="card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;">

                <TableView fx:id="requestsTable" prefHeight="500">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Titre" prefWidth="250"/>
                        <TableColumn fx:id="startDateColumn" text="Date début" prefWidth="120"/>
                        <TableColumn fx:id="endDateColumn" text="Date fin" prefWidth="120"/>
                        <TableColumn fx:id="statusColumn" text="Statut" prefWidth="120"/>
                        <TableColumn fx:id="neededPeopleColumn" text="Personnes" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <!-- Message si aucune demande -->
                <Text text="Aucune demande trouvée"
                      style="-fx-font-size: 14px; -fx-fill: #757575; -fx-font-style: italic;"
                      visible="false" managed="false"/>

            </VBox>

            <!-- Boutons d'action -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="Voir détails" styleClass="btn-primary" onAction="#handleViewDetails"
                        style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 14px;"/>
                <Button text="Supprimer" styleClass="btn-danger" onAction="#handleDelete"
                        style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 14px;"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
